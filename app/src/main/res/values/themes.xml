<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light Mode -->
    <style name="Theme._1220775_1221026_CourseProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Default widget styles -->
        <item name="materialCardViewStyle">@style/App.CardView</item>
        <item name="textInputStyle">@style/App.TextInputLayout</item>
        <item name="chipStyle">@style/App.Chip</item>
        <item name="floatingActionButtonStyle">@style/App.FloatingActionButton</item>
    </style>

    <style name="Theme._1220775_1221026_CourseProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme._1220775_1221026_CourseProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme._1220775_1221026_CourseProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base App Style -->
    <style name="App" />

    <!-- Custom CardView Style -->
    <style name="App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Custom Chip Style -->
    <style name="App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_unselected</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="textStartPadding">12dp</item>
        <item name="textEndPadding">12dp</item>
    </style>

    <!-- Custom FAB Style -->
    <style name="App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- Primary Button Style -->
    <style name="App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Text Button Style -->
    <style name="App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="App.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="App.Text.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Amount Text Styles -->
    <style name="App.Text.Amount">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.Text.Amount.Income">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/income</item>
    </style>

    <style name="App.Text.Amount.Expense">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/expense</item>
    </style>

    <style name="App.Text.Amount.Balance">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/balance</item>
    </style>

    <!-- Card Header Style -->
    <style name="App.Text.CardLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>