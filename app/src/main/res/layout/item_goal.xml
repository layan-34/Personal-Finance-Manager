<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Goal Icon -->
            <FrameLayout
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_balance">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_goal"
                    app:tint="@color/balance"
                    android:contentDescription="Goal" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvGoalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal Name"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipGoalStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="Active"
                        android:textSize="10sp"
                        app:chipMinHeight="24dp"
                        app:chipBackgroundColor="@color/balance_background"
                        android:textColor="@color/balance"
                        style="@style/Widget.MaterialComponents.Chip.Action" />

                    <TextView
                        android:id="@+id/tvGoalDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dec 2026"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Target Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target: "
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvGoalTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10,000.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Progress Section -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:trackThickness="10dp"
            app:trackCornerRadius="5dp"
            android:progress="0"
            android:max="100"
            app:indicatorColor="@color/secondary"
            app:trackColor="@color/progress_track"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvGoalSaved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Saved: $0 (0%)"
                android:textSize="13sp"
                android:textColor="@color/income" />

            <TextView
                android:id="@+id/tvGoalRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining: $10,000"
                android:textSize="13sp"
                android:textColor="@color/warning" />

        </LinearLayout>

        <!-- Milestone Alert -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipGoalAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ Milestone Reached!"
            app:chipBackgroundColor="@color/success_background"
            android:textColor="@color/success"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Chip.Action" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditGoal"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteGoal"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textColor="@color/expense"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="@color/expense"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
